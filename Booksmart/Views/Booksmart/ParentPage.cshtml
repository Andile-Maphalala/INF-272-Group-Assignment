<body style="background-color:lightgray">
    <div>
        <h1 style="text-align :center"> Parent Homepage</h1>

        <div id="container">
            <div id="row" style="float:right">
                <div class="col-lg-6 col-xs-12">
                    <a href="#" class="btn btn-info btn-lg">
                        <span class="glyphicon glyphicon-user"></span> User
                    </a>
                </div>
                <div class="col-lg-6 col-xs-12"><button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("AddLearner", "Booksmart",new { ID = Model.ParentID } )';">Add Child</button></div>
            </div>
        </div>

    </div>

    <br /><br />


    <table class="table">
        <tr>
            <th>
                Name


            </th>
            <th>
                Username
            </th>
            @*<th>
                Generate performance report
            </th>
            <th>
                Remove Child
            </th>*@

        </tr>
        @if (Model != null)
        {
            foreach (var item in Model.Children)
            {

                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Surname
                    </td>

                    @*<td><button type="button" class="btn btn-info">Generate Report</button></td>*@

                    <td>

                        <div class="col-lg-6 col-xs-12"><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" @*onclick="window.location.href='@Url.Action("DeleteLearner", "Booksmart", new { ID = item.UserID })';" name="Delete" )';"*@>Delete</button></div>

                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Confirm</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="window.location.href='@Url.Action("Cancel", "Booksmart", new { ID = item.LearnerID })';" name="Cancel" )';">Cancel</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="window.location.href='@Url.Action("DeleteLearner", "Booksmart", new { ID = item.LearnerID })';" name="Delete" )';">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>



                </tr>
                       
                    }
        }

    </table>


 
            







