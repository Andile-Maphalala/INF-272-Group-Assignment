<body id="body3">
    <input onclick="window.location.href='@Url.Action("HomePage", "Booksmart" )';" id="img" type="image" value="button" src="~/Pics/home.jpg" class="home" />
   <br /><br /><br /><br /><br />
    <br /><br /><br />
   

 
    <div class="card-deck">
        <div class="card">
            <img src="~/Pics/images.jpg" height="300"  class="card-img-top" alt="...">
            <hr />
            <div class="card-body">
                <a href='@Url.Action("NumberGame", "Booksmart" )';"  class="btn btn-primary">Numbers</a>
            </div>
        </div>
        <div class="card">
            <img src="~/Pics/alpha3.jpg" class="card-img-top" height="300"  alt ="...">
