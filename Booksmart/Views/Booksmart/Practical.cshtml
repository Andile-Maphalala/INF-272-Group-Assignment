                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Okay</button>

                    </div>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
    $(window).on('load',function(){
        $('#exampleModal').modal('show');
    });
    </script>
</body>
</html>
