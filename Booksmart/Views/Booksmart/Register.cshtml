
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/Content/Register.css" rel="stylesheet" />
</head>
<body>
    <div class="form">
        <label for="Name">Name:</label>
        <input type="text" id="Name" required />
        <br /><br />
        <label for="Surname">Surname:</label>
        <input type="text" id="Surname" />
        <br /><br />
        <label for="Username">Username:</label>
        <input type="text" id="Username" />
        <br /><br />
        <label for="Age">Age:</label>
        <input type="number" id="Age" />
        <br /><br />
        <label for="Gender">Gender:</label>
        <select id="Gender">
            <option>Male</option>
            <option>Female</option>
        </select>
        <br /><br />
        <label for="Country">Country:</label>
        <input type="text" id="Country" />
        <br /><br />
        <label>Date Of Birth</label>
        <input type="datetime-local" id="DOB" />
        <br /><br />
        <label for="Email">E-Mail Address:</label>
        <input type="text" id="Email" />
        <br /><br />
        <label for="Password">Password:</label>
        <input type="text" id="Password" required />
        <br /><br />
        <label for="ConfirmPassword">Confitm Password:</label>
        <input type="text" id="ConfirmPassword" required />
        <br /><br />
        <button type="submit" onclick="window.location.href = '@Url.Action("HomePage","Booksmart")';">Register></button>
    </div>
    <a href="@Url.Action("Login", "Booksmart")">Click here if you already have an account</a>
</body>
</html>
