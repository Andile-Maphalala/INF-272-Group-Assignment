                var fromTop = $(this).scrollTop();
                var $cur = null;
                $scrollItems.each(function (index, ele) {
                    if ($(ele).offset().top < fromTop + offsetTolorence) $cur = $(ele);
                });
                if ($cur != null && pagePositon != $cur.data('pos')) {
                    pagePositon = $cur.data('pos');
